{
  "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "allowJs": true,
      "noUnusedLocals": true
  },
  "include": [
      "./ormconfig.js",
      "src/**/*",
      "db/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}